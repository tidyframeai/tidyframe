#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run tests before commit
echo "ğŸ§ª Running tests..."
npm run test:ci

# Check if tests passed
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed. Please fix failing tests before committing."
  exit 1
fi

# Run linting
echo "ğŸ” Running ESLint..."
npm run lint:fix

# Check if linting passed
if [ $? -ne 0 ]; then
  echo "âŒ Linting failed. Please fix linting errors before committing."
  exit 1
fi

# Run type checking
echo "ğŸ”§ Running TypeScript check..."
npm run typecheck

# Check if type checking passed
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript errors found. Please fix type errors before committing."
  exit 1
fi

# Check test coverage
echo "ğŸ“Š Checking test coverage..."
npm run test:coverage

echo "âœ… All checks passed! Proceeding with commit..."